<h1 class="text-center"><%= @category.title %></h1>
<p class="text-center"><%= @category.description %></p>
<% progress = (100 / @category.words.count) * @lesson.words.count %>
<div class="progress mb-3">
    <div class="progress-bar bg-warning" role="progressbar" style="width: <%= progress %>%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
</div>

<p class="text-center"> of 17</p>
<div class="card text-center" style="width: 600px; margin:0 auto;">
    <div class="card-header">
        <%= @word.content %>
    </div>
    <div class="card-body">
        <% @word.choices.each do |choice| %>
            <%= form_with(model: [@lesson, @answer], local:true) do |f| %>
                <%= f.hidden_field :lesson_id, value: @lesson.id %>
                <%= f.hidden_field :word_id, value: @word.id %>
                <%= f.hidden_field :choice_id, value: choice.id %>
                <%= f.submit choice.content, class: "btn btn-outline-info btn-block mb-2" %>
            <% end %>
        <% end %>
    </div>
</div>
