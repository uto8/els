<%= render "share/flash_message" %>
<div class="row">
    <div class="col-4">
        <div class="card">
            <%= render "share/admin_side" %>
        </div>
    </div>
    <div class="col-8">
        <div class="card mb-5">
            <div class="card-header">Over View</div>
            <div class="card-body">
              <div class="row">
                <div class="col-6">User: <%= User.count %></div>
                <div class="col-6">Category</div>
              </div>
            </div>
        </div>
        <div class="card">
            <div class="card-header">Over View</div>
            <div class="card-body">
                <table class="table">
                  <tr>
                    <td>Name</td>
                    <td>E-mail</td>
                    <td>Date Join</td>
                  </tr>
                  <% @users.each do |user| %>
                  <tr>
                    <td><%= user.name %> </td>
                    <td><%= user.email %> </td>
                    <td><%= user.created_at %> </td>
                  </tr>
                  <% end %>
                </table>
            </div>
        </div>
    </div>
</div>
