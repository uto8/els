<%= form_with(model: [:admin, @category], local:true) do |f| %>
    <%= render "share/error_message", object: f.object %>
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control mb-2", placeholder: "Enter Title" %>
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control mb-2", placeholder: "Enter description" %>  
    <%= f.submit submit_name,class:"btn btn-primary btn-block" %>
<% end %>