<% provide(:title, 'Users') %>
<h2 class="text-center">Followers</h2>
<div class="row">
    <div class="col-2"></div>
    <div class="col-8">
        <ul class="list-group">
            <div class="mb-3" style="margin:auto;">
                <%#= will_paginate @users %>
                <%= will_paginate @followers %>
            </div>
            <% @followers.each do |user| %>
                <li style="list-style:none;" class="list-group-item">
                    <%= gravatar_for user, size: 52 %>
                    <%= link_to user.name, user_path(user) %>
                </li>  
            <% end %>
            <div class="mt-3" style="margin:auto;">
                <%#= will_paginate @users %>
                <%= will_paginate @followers %>
            </div>
        </ul>
    </div>
    <div class="col-2"></div>
</div>