<% provide(:title, 'Users') %>
<h2 class="text-center">User List</h2>
<div class="row">
  <div class="col-2"></div>
  <div class="col-8">
    <ul class="list-group">
    <%= will_paginate @users %>
    <% @users.each do |user| %>
      <li style="list-style:none;" class="list-group-item">
        <%= gravatar_for user, size: 52 %>
        <%= link_to user.name, user_path(user) %>
      </li>  
    <% end %>
    <%= will_paginate @users %>
    </ul>
  </div>
  <div class="col-2"></div>
</div>