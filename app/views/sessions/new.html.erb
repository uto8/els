<%= provide(:title,"Login") %>
<h1 class="text-center">Login</h1>
<h4 class="text-center">Welcome back</h4>
<div class="row">
    <div class="col-3">
    </div>
    <div class="col-6">
        <%= form_with(url:sessions_path, scope: :session, local: true) do |f| %>
            <%= render "share/flash_message" %>
            <%= f.label :email %>
            <%= f.email_field :email, class: "form-control mb-2", placeholder: "Enter Email" %>
            <%= f.label :password %>
            <%= f.password_field :password, class: "form-control mb-2", placeholder: "Enter Password" %>
            <%= f.submit "Login",class:"btn btn-primary btn-block",placeholder:"Create an account" %>
        <% end %>
    </div>
    <div class="col-3">
    </div>
</div>
